{% set name = random(100000) %}
<div id="modal-{{ name }}" class="modal">
    <div class="modal-underlay"></div>
    <div class="modal-content relative">
        <button type="button" id="modal-{{ name }}-close-button" class="absolute top-2 right-4 text-gray-500 hover:text-gray-800 hover:cursor-pointer font-bold text-2xl">&times;</button>
        <h1>{% block title %}{% endblock %}</h1>
        {% block main %}
        
        {% endblock %}
    </div>
</div>

<script>
    document.getElementById('modal-{{ name }}').querySelector('.modal-underlay').addEventListener('click', function() {
        document.getElementById('modal-{{ name }}').remove();
    });
    document.getElementById('modal-{{ name }}').querySelector('#modal-{{ name }}-close-button').addEventListener('click', function() {
        document.getElementById('modal-{{ name }}').remove();
    });
</script>